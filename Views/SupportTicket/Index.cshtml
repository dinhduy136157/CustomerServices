    <div class="customManage" id="supportM" style="padding-top: 30px; border-top: 1px solid #ccc; margin: 50px 0;">
        <p style="margin-left: 30px; font-size: 25px; color: rgb(1, 162, 255); font-weight: bold;">
            Quản Lý Yêu Cầu Hỗ Trợ
        </p>

        <div class="flex-container">
            <!-- Danh sách yêu cầu hỗ trợ -->
            <div class="form-container " id="formShow">


                <!-- Bảng yêu cầu khách hàng -->
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>ID KH</th>
                            <th>Họ KH</th>
                            <th>Tên KH</th>
                            <th>Chủ đề hỗ trợ</th>
                            <th>Mô tả chi tiết</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo yêu cầu</th>
                            <th>Ngày cập nhật</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Dữ liệu mẫu -->
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="stt">@item.ticket_id</td>
                                <td>
                                    @item.customer_id
                                </td>
                                <td>
                                    @item.Customer.first_name
                                </td>
                                <td>
                                    @item.Customer.last_name
                                </td>
                                <td>
                                    @item.subject
                                </td>
                                <td>
                                    @item.description
                                </td>
                                <td>
                                    @if (@item.status == "C")
                                    {
                                        <p>Chưa bắt đầu</p>
                                    }
                                    @if (@item.status == "D")
                                    {
                                        <p>Đang thực hiện</p>
                                    }
                                    @if (item.status == "H")
                                    {
                                        <p>Hoàn thành</p>
                                    }
                                </td>
                                <td>
                                    @item.created_at
                                </td>
                                <td>
                                    @item.updated_at
                                </td>
                            </tr>
                        }

                        <!-- Dòng trống để thêm mới -->
                        <form action="@Url.Action("Create", "SupportTicket")" method="post">
                        <tr id="newRow">

                            <td class="stt">...</td>
                            <td>
                                <input type="number" name="customer_id" placeholder="Nhập Mã KH" />
                            </td>
                            <td colspan="2">
                                Không nhập được..
                            </td>
                            <td>
                                <input type="text" name="subject" placeholder="Nhập chủ đề" />
                            </td>
                            <td>
                                <input type="text" name="description" placeholder="Nhập mô tả" />
                            </td>
                            <td>
                                <select name="status">
                                    <option value="C">Chưa bắt đầu</option>
                                    <option value="D">Đang thực hiện</option>
                                    <option value="H">Hoàn thành</option>
                                </select>
                            </td>
                            <td colspan="2">
                                <button style="margin-left: 40px; margin-top: -20px; padding-left: 40px; padding-right: 40px;" type="submit">Thêm</button>
                            </td>
                            <input type="hidden" name="created_at" value="@DateTime.Now" />
                            <input type="hidden" name="updated_at" value="@DateTime.Now" />


                        </tr>

                        </form>

                    </tbody>
                </table>




            </div>

            <!-- Sửa thông tin khách hàng -->
            <form action="@Url.Action("Edit", "SupportTicket")" method="post">
                <div class="form-container" style="width: 80%;" id="editInfo">
                    <div class="custom_remove" style="padding: 20px; border: 1px solid #ccc; margin-top: 30px; ">
                        <h2>Sửa yêu cầu</h2>
                        <label>ID cần sửa: </label>
                        <input type="number" name="ticket_id" placeholder="Nhập ID">
                        <label>Chủ đề: </label>
                        <input type="text" name="subject" placeholder="Nhập chủ đề">


                        <select name="status">
                            <option value="C">Chưa bắt đầu</option>
                            <option value="D">Đang thực hiện</option>
                            <option value="H">Hoàn thành</option>
                        </select>
                        <label style="margin-left:-150px; margin-top:50px;">Mô tả: </label>
                        <input type="textArea" name="description" placeholder="Nhập nội dung yêu cầu" style="height: 150px;">
                        <input type="hidden" name="updated_at" value="@DateTime.Now" />
                        <button style="width: 100px;" type="submit">Sửa</button>
                    </div>
            </form>
            <form action="@Url.Action("Delete", "SupportTicket")" method="get">
                <div class="custom_remove" style="padding: 20px; border: 1px solid #ccc; margin-top: 30px; ">
                    <h2>Xoá yêu cầu</h2>
                    <label for="editName">ID cần xoá: </label>
                    <input type="number" name="id" placeholder="Nhập ID">
                    <button style="width: 100px;" type="submit">Xóa</button>
                </div>
            </form>

        </div>


    </div>


@{ 
    Layout = null;
}
<!doctype html>
<html class="no-js" lang="zxx">

<head>
    <!-- Meta Tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="keywords" content="Site keywords here">
    <meta name="description" content="">
    <meta name='copyright' content=''>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Title -->
    <title>Phần mềm quản lý tương tác khách hàng.</title>

    <!-- Favicon -->
    <link rel="icon" href="~/Content/favicon.png">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap"
          rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <!-- Nice Select CSS -->
    <link rel="stylesheet" href="~/Content/nice-select.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <!-- icofont CSS -->
    <link rel="stylesheet" href="~/Content/icofont.css">
    <!-- Slicknav -->
    <link rel="stylesheet" href="~/Content/slicknav.min.css">
    <!-- Owl Carousel CSS -->
    <link rel="stylesheet" href="~/Content/owl-carousel.css">
    <!-- Datepicker CSS -->
    <link rel="stylesheet" href="~/Content/datepicker.css">
    <!-- Animate CSS -->
    <link rel="stylesheet" href="~/Content/animate.min.css">
    <!-- Magnific Popup CSS -->
    <link rel="stylesheet" href="~/Content/magnific-popup.css">

    <!-- Medipro CSS -->
    <link rel="stylesheet" href="~/Content/normalize.css">
    <link rel="stylesheet" href="~/Content/style.css" />
    <link rel="stylesheet" href="~/Content/responsive.css">

</head>

<body>
    
    <!-- Preloader -->
    <div class="preloader">
        <div class="loader">
            <div class="loader-outter"></div>
            <div class="loader-inner"></div>

            <div class="indicator">
                <svg width="16px" height="12px">
                    <polyline id="back" points="1 6 4 6 6 11 10 1 12 6 15 6"></polyline>
                    <polyline id="front" points="1 6 4 6 6 11 10 1 12 6 15 6"></polyline>
                </svg>
            </div>
        </div>
    </div>
    <!-- End Preloader -->
    <!-- Header Area -->
    <!-- Header Inner -->
    <div class="header header-inner">
        <div class="container">
            <div class="inner">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-12">
                        <!-- Start Logo -->
                        <div class="logo">
                            <a href="index.html"><img src="img/logo.png" alt="#"></a>
                        </div>
                        <!-- End Logo -->
                        <!-- Mobile Nav -->
                        <div class="mobile-nav"></div>
                        <!-- End Mobile Nav -->
                    </div>
                    <div class="col-lg-7 col-md-9 col-12">
                        <!-- Main Menu -->
                        <div class="main-menu">
                            <nav class="navigation">
                                <ul class="nav menu">
                                    <li><a href="#header">Home <i class="icofont-rounded-down"></i></a></li>
                                    <li class="active"><a href="#customerM">Customer List</a></li>
                                    <li><a href="#supportM">Support List </a></li>
                                    <li><a href="#interactionM">Interaction List</a></li>
                                </ul>
                            </nav>
                        </div>
                        <!--/ End Main Menu -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ End Header Inner -->
    </header>
    <!-- End Header Area -->
    <!-- Slider Area -->
    <!-- Start CM -->

    <div class="customManage" id="customerM" style="padding-top: 30px; border: 1px 0 1px 0 solid #ccc; margin-bottom: 20px;">
        <p style="font-size: 25px; color: rgb(1, 162, 255);; font-weight: bold;">
            Quản Lý Thông Tin Khách Hàng
        </p>

        <div class="flex-container">
            <!-- Danh sách yêu cầu hỗ trợ -->
            <div class="form-container" id="formShow">
                <h2>Danh sách khách hàng</h2>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Họ</th>
                            <th>Tên</th>
                            <th>SĐT</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Thời gian tạo</th>

                        </tr>
                    </thead>
                    <tbody>
                        <!-- Dữ liệu mẫu -->
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="stt">@item.customer_id</td>
                                <td contenteditable="false"  id="name">
                                    @item.first_name
                                </td>
                                <td contenteditable="false"  id="status">
                                    @item.last_name
                                </td>
                                <td contenteditable="false"  id="phone">
                                    @item.phone
                                </td>
                                <td contenteditable="false"  id="email">
                                    @item.email
                                </td>
                                <td contenteditable="false"  id="request">
                                    @item.address
                                </td>
                                <td contenteditable="false"  id="request">
                                    @item.created_at
                                </td>


                            </tr>
                        }

                        <!-- Dòng trống để thêm mới -->

                        <form action="@Url.Action("Create", "Customer")" method="post">
                            <tr id="newRow">
                                <td class="stt"></td>
                                <td>
                                    <input type="text" name="first_name" placeholder="Nhập Họ" />
                                </td>
                                <td>
                                    <input type="text" name="last_name" placeholder="Nhập Tên" />
                                </td>
                                <td >
                                    <input type="text" name="phone" placeholder="Nhập SĐT" />
                                </td>
                                <td >
                                    <input type="text" name="email" placeholder="Nhập Email" />
                                </td>
                                <td >
                                    <input type="text" name="address" placeholder="Nhập địa chỉ" />
                                </td>
                                <td>
                                    <input type="hidden" name="created_at" value="@DateTime.Now" />
                                    <input type="hidden" name="updated_at" value="@DateTime.Now" />
                                </td>
                            </tr>
                            <button  type="submit">Thêm</button>
                        </form>

                    </tbody>
                </table>

                <form action="/Customer/Delete" method="get">
                    <div class="custom_remove" style="padding: 20px; border: 1px solid #ccc; margin-top: 30px; ">
                        <h2>Xoá khách hàng</h2>
                        <label for="editName">ID cần xoá: </label>
                        <input type="text" name="id" placeholder="Nhập ID">
                        <button style="width: 100px;">Xóa</button>
                    </div>
                </form>
                
            </div>

            <!-- Sửa thông tin khách hàng -->
            
            <div class="form-container" id="editInfo">
                <form action="@Url.Action("Edit", "Customer")" method="post">
                    <h2>Sửa thông tin khách hàng</h2>
                    <label for="editName">ID bạn muốn sửa: </label>
                    <input type="text" name="customer_id" placeholder="Nhập ID">

                    <label for="editName">Họ:</label>
                    <input type="text" name="first_name" placeholder="Nhập Họ">
                    <label for="editName">Tên:</label>
                    <input type="text" name="last_name" placeholder="Nhập Tên">

                    <label for="editPhone">SĐT:</label>
                    <input type="text" name="phone" placeholder="Nhập SĐT">

                    <label for="editEmail">Email:</label>
                    <input type="text" name="email" placeholder="Nhập Email">

                    <label for="editRequest">Địa chỉ:</label>
                    <input type="text" name="address" placeholder="Nhập địa chỉ">
                    <button type="submit">Cập nhật</button>
                    <button class="cancel" onclick="closeForm()">Hủy</button>
                </form>
            </div>

        </div>

    </div>
    <a href="/Home/index">
        <button style="margin-bottom: 30px; margin-left: 20px;"><- Trở về</button>

    </a>


    <!-- End CM -->
    <!-- Start SM -->

    <!-- Footer Area -->
    <footer id="footer" class="footer ">

        <!-- Copyright -->
        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-12">
                        <div class="copyright-content">
                            <p>
                                © Copyright 2023 | All Rights Reserved by <a href="https://www.wpthemesgrid.com"
                                                                             target="_blank">Nhóm 6</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ End Copyright -->
    </footer>
    <script>
        function openForm() {
            document.getElementById('addForm').style.display = 'block';
            addNewRow();
        }

        function addNewRow() {
            var table = document.querySelector("table tbody");
            var newRow = document.getElementById("newRow").cloneNode(true);

            // Lấy STT của dòng cuối cùng
            var lastStt = parseInt(table.rows[table.rows.length - 1].querySelector('.stt').textContent, 10);

            // Tăng giá trị STT lên 1 và gán cho dòng mới
            newRow.querySelector('.stt').textContent = lastStt + 1;

            newRow.id = "newRow" + (table.rows.length + 1);
            table.appendChild(newRow);
        }

        function closeForm() {
            document.getElementById('addForm').style.display = 'none';
            document.getElementById('editForm').style.display = 'none';
        }

        function clearDefaultText(element) {
            // Kiểm tra nếu nội dung là mặc định thì xóa
            var defaultValues = ["Nhập tên", "Nhập SĐT", "Nhập Email", "Nhập nội dung yêu cầu", "Nhập trạng thái xử lý", "Nhập thời gian yêu cầu"];
            if (defaultValues.includes(element.textContent)) {
                element.textContent = "";
            }
        }
    </script>

    <!-- Footer Area -->
    <!--/ End Footer Area -->
